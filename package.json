{
  "name": "local-whisper-stt",
  "version": "1.0.0",
  "description": "Offline Speech to Text",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.zhanglele.localwhisper",
    "productName": "LocalWhisper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": ["**/*"]
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg"],
      "arch": ["universal"],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": ["nsis", "portable"],
      "artifactName": "${productName}-Windows-${version}.${ext}"
    },
    "asar": true
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  }
}
